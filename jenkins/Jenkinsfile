pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'andrskom/golang-junit:1.11.5'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {  // <- Abre el bloque con {
                    sh 'go test -v ./...'   // Este comando se ejecutarÃ¡ dentro de bugtracker-backend
                }                            // <- Cierra el bloque con }
            }
        }
    }
}