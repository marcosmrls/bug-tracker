pipeline {
    agent none

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'marcosmrls/golang-junit:latest'
                    reuseNode true
                }
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'export GOCACHE=/tmp/go-build && go test -v ./...'
                }
            }
        }
    }
}